<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salmaali.shaghir.MainActivity"
    android:background="@drawable/backgroung4">


    <Button
        android:id="@+id/LookingForSeat"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/Help"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bstyle"
        android:text="البحث عن شاغر"
        android:textColor="#fff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35mm"
        android:layout_height="35mm"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:src="@drawable/logo" />

    <Button
        android:onClick="showPOP"
        android:id="@+id/Help"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/LookingForSeat"
        android:layout_marginBottom="76dp"
        android:background="@drawable/bstyle"
        android:text="للمساعدة"
        android:textColor="#fff"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="طوَر بفخر في المملكة العربية السعودية"
        android:textColor="#0d0d0d"
        android:textSize="15dp"
        android:background="#fff"/>

</RelativeLayout>
